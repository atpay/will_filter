<div class="wf_exporter_header">
  <div class="end">
    <%=link_to_function("&times;".html_safe, "wfExporter.hide()", :title=>"Close", :class => "close")%>
  </div>
  Exporter
</div>

<div class="wf_exporter_container">
  <table style="width:100%" cellpadding="0px" cellspacing="0px;">
    <thead>
      <tr>
        <td><input type="checkbox" id="wf_fld_all" onClick="wfExporter.selectAllFields(this);" style="width:20px;" checked="checked"></td>
        <td>Name</td>
      </tr>        
    </thead>
    <tbody id="wf_export_flds">
      <tr>
        <td colspan="2">Select Export Format</td>
      </tr>
    </tbody>
  </table>
  
  <hr>
  <div class="center">
    Format: <%= select_tag("wf_export_format_selector", options_for_select(@wf_filter.export_formats,  @wf_filter.format), :prompt => "Select...", :onchange => "wfExporter.fields();") %>
  </div>
  <div class="center">
      <%=link_to_function("<span>Export</span>".html_safe, "wfExporter.exportFilter()", :class => "wf_grey_button wf_pcb") %>
      <%=link_to_function("<span>Cancel</span>".html_safe, "wfExporter.hide()", :class => "wf_grey_button wf_pcb") %>
  </div>
</div>
